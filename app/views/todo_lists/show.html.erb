<p id="notice"><%= notice %></p>

<h2 class="todo_list_title"><%= @todo_list.title %></h2>
<p class="todo_list_sub_title"><%= @todo_list.description %></p>

<div id="todo_items_wrapper">
	<% @todo_list.todo_items.each do |item| %>
	<div id="form">
		 <%= item.content %>
		<%= button_to "Delete", todo_list_todo_item_path(@todo_list, item), method: "delete" %>
	</div>
	<% end %>
	
</div>


<div class="links">
    <p><%= link_to 'New Todo Item', new_todo_list_todo_item_path(@todo_list) %></p> 
	<p><%= link_to 'Edit', edit_todo_list_path(@todo_list) %></p> 
	<p><%= button_to 'Delete', todo_list_path(@todo_list), method: :delete %></p>
	  <p><%= link_to 'Back', todo_lists_path%></p>
	  <p><%= link_to "Home", root_path %></p>
</div>