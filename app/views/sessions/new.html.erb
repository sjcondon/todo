<h1>Log in</h1>


<%= form_tag("/login") do %>
<div class="links">
    <% if @error %>
        <p><%= @error %></p> 
    <% end %> 

        <%= label_tag "Email" %>
        <%= email_field_tag "email",'', :class => "new todo", :placeholder => "Email Required" %>
        <%= label_tag "Password" %>
        <%= password_field_tag "password",'', :class => "new todo", :placeholder => "Password Required" %>
</div>
    <div class="links">
        <%= submit_tag "Login"%>
        <p><%= link_to "Home", root_path %> </p>
        <p><%= link_to "Log in via Github", "/auth/github" %></p>
    </div>
        <% end %>
    