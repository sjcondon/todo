<h1>Log in</h1>

<% if flash[:notice] %>
<h2><%= flash[:notice] %></h2>
<% end %>

<%= form_tag("/sessions") do %>
    <p>
        <%= label_tag "Email" %>
        <%= email_field_tag "email",'', :class => "new todo", :placeholder => "Login with your email" %>
        <%= label_tag "Password" %>
        <%= password_field_tag "password" %>
    </p>
    <div class="links">
        <%= submit_tag "Login"%>
        <br><%= link_to "Home", root_path %> </br>
    </div>
        
    <% end %>