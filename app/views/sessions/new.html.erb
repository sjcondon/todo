<h1>Log in</h1>

<% if flash[:notice] %>
<h2><%= flash[:notice] %></h2>
<% end %>

<%= form_tag("/sessions") do %>
    <p>
        <%= label_tag "Email" %>
        <%= text_field_tag "email" %>
        <%= label_tag "Password" %>
        <%= password_field_tag "password" %>
    </p>
        <%= submit_tag "Login"%>
        <p> <%= link_to "Home", root_path %> </p>
    <% end %>