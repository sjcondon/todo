<%= form_tag("/signup") do %>
    <div class="links">
    <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |msg| %>
           <p><%= msg %></p> 
        <% end %> 
    <% end %>
    <%= label_tag "Email" %>
    <%= email_field_tag :"user[email]",'', :class => "new todo", :placeholder => "Sign up with your email" %>
    <%= label_tag "Password" %>
    <%= password_field_tag :"user[password]" %>
    </div>
    <div class="links">
        <%= submit_tag "Sign up"%>
    
    <div>
    <% end %>

    <%= link_to "Home", root_path %>